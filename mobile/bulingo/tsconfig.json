{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",               // Enables modern module syntax
    "target": "esnext",               // Enables modern JavaScript features
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
